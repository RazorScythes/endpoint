{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ],
    "crons": [
        {
            "path": "/tags/updateTagsCount",
            "schedule": "1 5 * * *"
        },
        {
            "path": "/category/updateCategoryCount",
            "schedule": "1 5 * * *"
        },
        {
            "path": "/author/updateAuthorCount",
            "schedule": "1 5 * * *"
        },
        {
            "path": "/videos/updateVideoProperties",
            "schedule": "10 5 * * *"
        }
    ]
}